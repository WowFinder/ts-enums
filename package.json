{
    "name": "@wowfinder/ts-enums",
    "version": "0.0.4",
    "description": "TS-based enumerations used accross the WowFinder apps and libraries",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/WowFinder/ts-enums.git",
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": "GPL3",
    "files": [
        "dist"
    ],
    "scripts": {
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "format": "prettier --write \"src/**/*.{js,ts,json,json5}\"",
        "format:check": "prettier --check \"src/**/*.{js,ts,json,json5}\"",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "checks:quick": "npm-run-all -pc lint tsc",
        "checks:fix": "npm-run-all -sc lint:fix format tsc",
        "checks:standard": "npm-run-all -sc lint format:check tsc test",
        "checks:full": "npm-run-all -sc lint:fix format test:coverage build",
        "checks:pedantic": "npm-run-all -sc lint format:check test:coverage build",
        "build:pre": "rimraf dist",
        "build:tsc": "tsc",
        "build": "npm-run-all -s build:pre build:tsc",
        "prepublishOnly": "yarn version apply && yarn run checks:pedantic && yarn build",
        "prepare": "build"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.3",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "rxjs": "^7.8.1",
        "ts-jest": "^29.1.2",
        "tsd": "^0.30.7",
        "typescript": "^5.3.3"
    },
    "packageManager": "yarn@4.1.0"
}
